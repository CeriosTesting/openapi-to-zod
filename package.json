{
	"private": true,
	"packageManager": "pnpm@9.15.0",
	"scripts": {
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"check": "biome check --write",
		"check-versions": "tsx scripts/check-dependency-versions.ts",
		"lint": "biome lint",
		"compile": "pnpm -r compile",
		"update-deps": "pnpm update -r --latest && pnpm check-versions",
		"changeset": "changeset",
		"pack": "pnpm --filter \"*\" exec pnpm pack --pack-destination ../..",
		"version-packages": "changeset version"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@biomejs/biome": "2.3.9",
		"@changesets/cli": "^2.29.8",
		"@types/node": "^25.0.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"esbuild": "0.27.1"
	}
}
