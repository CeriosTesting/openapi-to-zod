{
	"private": true,
	"author": "Ronald Veth - Cerios",
	"scripts": {
		"build": "pnpm -r build",
		"changeset": "changeset",
		"check-versions": "tsx scripts/check-dependency-versions.ts",
		"compile": "pnpm -r compile",
		"format": "oxfmt",
		"format:check": "oxfmt --check",
		"lint": "oxlint --type-aware",
		"lint:fix": "oxlint --type-aware --fix",
		"pack": "pnpm --filter \"*\" exec pnpm pack --pack-destination ../..",
		"test": "pnpm -r test",
		"update-deps": "pnpm update -r --latest && pnpm check-versions",
		"version-packages": "changeset version"
	},
	"dependencies": {
		"esbuild": "0.27.3"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@changesets/cli": "^2.29.8",
		"@types/node": "^25.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.33.0",
		"oxlint": "^1.48.0",
		"oxlint-tsgolint": "^0.14.0",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"yaml": "^2.8.2",
		"zod": "^4.3.6"
	},
	"packageManager": "pnpm@9.15.0"
}
