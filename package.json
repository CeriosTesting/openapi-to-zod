{
	"private": true,
	"workspaces": ["packages/*"],
	"scripts": {
		"build": "npm run build --workspaces --if-present",
		"test": "npm run test --workspaces --if-present",
		"check": "biome check --write",
		"check-versions": "tsx scripts/check-dependency-versions.ts",
		"lint": "biome lint",
		"compile": "npm run compile --workspaces --if-present",
		"dev": "npm run dev --workspaces --if-present",
		"update-deps": "npx npm-check-updates -u --workspaces && npm install && npm run check-versions",
		"changeset": "changeset",
		"pack": "npm run pack --workspaces --if-present"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@biomejs/biome": "2.3.9",
		"@changesets/cli": "^2.29.8",
		"@types/node": "^25.0.2",
		"husky": "^9.1.7",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"esbuild": "0.27.1"
	}
}
